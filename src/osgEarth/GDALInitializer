#ifndef OSGEARTH_GDALINITIALIZER
#define OSGEARTH_GDALINITIALIZER 1

#include <gdal_priv.h>
#include <ogr_api.h>

namespace osgEarth
{
    // Initialize GDAL globals -- this must be called before using any GDAL or OGR routines!
    inline void InitGDAL()
    {
        // set up GDAL and OGR.
        OGRRegisterAll();
        GDALAllRegister();

        // support Chinese character in the file name and attributes in ESRI's shapefile
        CPLSetConfigOption("GDAL_FILENAME_IS_UTF8", "NO");
        CPLSetConfigOption("SHAPE_ENCODING", "");
    }

    // Initializes GDAL if the appropriate #define is set.
    // Instructions: Declare a global instance of this class in each shared library that uses GDAL.
    class GDALInitializer
    {
    public:
        inline GDALInitializer()
        {
#ifdef REGISTER_GDAL_FOR_EACH_SHARED_OBJECT
            InitGDAL();
#endif
        }
    };
}

#endif  // OSGEARTH_GDALINITIALIZER